{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "pin": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "milestone",
                "bid"
              ]
            },
            "id": {
              "type": [
                "string",
                "number"
              ]
            }
          },
          "required": [
            "type",
            "id"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null
    }
  },
  "required": [
    "pin"
  ]
}