{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "rotation": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "sum": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "seconds": {
            "type": "number"
          }
        },
        "required": [
          "sum",
          "id",
          "seconds"
        ]
      },
      "default": []
    },
    "current": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string"
            },
            "sum": {
              "type": "string"
            },
            "index": {
              "type": "number"
            },
            "timestamp": {
              "type": "number"
            }
          },
          "required": [
            "id",
            "sum",
            "index",
            "timestamp"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null
    }
  },
  "required": [
    "rotation",
    "current"
  ]
}