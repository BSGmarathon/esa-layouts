{
  "name": "esa-layouts",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/esamarathon/esa-layouts#readme",
  "bugs": {
    "url": "https://github.com/esamarathon/esa-layouts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esamarathon/esa-layouts.git"
  },
  "license": "MIT",
  "author": "zoton2",
  "scripts": {
    "build": "npm run build:extension",
    "build:browser": "trash .cache && cross-env NODE_ENV=production npm run bundle",
    "build:extension": "trash extension && npx tsc -b tsconfig.json",
    "build_new": "npm run build:extension && npm run build:browser",
    "bundle": "trash graphics && trash dashboard && node script/bundle.js",
    "start": "node ../..",
    "typeschemas": "node script/typeschemas.js",
    "watch": "run-p watch:extension",
    "watch:browser": "npm run bundle",
    "watch:extension": "trash extension && npx tsc -b tsconfig.json -w",
    "watch_new": "run-p watch:*"
  },
  "dependencies": {
    "amqp-connection-manager": "^2.3.2",
    "amqplib": "^0.5.3",
    "cheerio": "^1.0.0-rc.3",
    "clone": "^2.1.2",
    "css": "^2.2.4",
    "moment": "^2.24.0",
    "mpd": "^1.3.0",
    "needle": "^2.4.0",
    "obs-websocket-js": "^3.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "speedcontrol-util": "github:speedcontrol/speedcontrol-util#dev",
    "streamdeck-util": "^0.3.0"
  },
  "devDependencies": {
    "@types/amqp-connection-manager": "^2.0.4",
    "@types/amqplib": "^0.5.11",
    "@types/cheerio": "^0.22.11",
    "@types/clone": "^0.1.30",
    "@types/css": "0.0.31",
    "@types/needle": "^2.0.4",
    "@types/request-promise": "^4.1.43",
    "@vue/component-compiler-utils": "^3.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-vue": "^5.2.2",
    "json-schema-to-typescript": "^6.1.3",
    "nodecg": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "trash-cli": "^2.0.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.5",
    "vue": "^2.6.10",
    "vue-hot-reload-api": "^2.3.3",
    "vue-router": "^3.0.6",
    "vue-template-compiler": "^2.6.10"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.esm.js"
  },
  "nodecg": {
    "compatibleRange": "^1.0.0",
    "bundleDependencies": {
      "nodecg-speedcontrol": "^1.0.0"
    },
    "graphics": [
      {
        "file": "host-dashboard.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "omnibar.html",
        "width": 1920,
        "height": 80
      },
      {
        "file": "intermission.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "intermission-hosts.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "game-layout.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "dashboardPanels": [
      {
        "name": "intermission-control",
        "title": "Intermission Control",
        "width": 2,
        "file": "intermission-control.html",
        "workspace": "Scene Editing"
      },
      {
        "name": "music-player",
        "title": "Music Player",
        "width": 2,
        "file": "music-player.html",
        "workspace": "Scene Editing"
      },
      {
        "name": "game-layout-override",
        "title": "Game Layout Override",
        "width": 2,
        "file": "game-layout-override.html",
        "workspace": "Scene Editing"
      }
    ],
    "assetCategories": [
      {
        "name": "sponsor-logos",
        "title": "Sponsor Logos",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "png",
          "svg"
        ]
      },
      {
        "name": "sponsor-slides",
        "title": "Sponsor Slide Images/Videos",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "png",
          "svg",
          "mp4"
        ]
      }
    ],
    "mount": [
      {
        "directory": "static",
        "endpoint": "static"
      }
    ]
  },
  "vue": {
    "runtimeCompiler": true
  }
}
